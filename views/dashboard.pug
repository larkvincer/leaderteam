extends layout
block content
	div(class='pure-menu dashboard-menu')
		span(class='dashboard-menu_heading block-underline') Меню
		ul(class='pure-menu-list')
			li(class='pure-menu-item')
				a(class='dashboard-menu_section-heading') Підлеглі
			li(class='pure-menu-item')
				a(class='dashboard-menu_link link__selected') Менеджери
			li(class='pure-menu-item')
				a(class='dashboard-menu_link') Супервайзер
			li(class='pure-menu-item')
				a(class='dashboard-menu_link block-underline') Мерчиндайзери

			li(class='pure-menu-item')
				a(class='dashboard-menu_section-heading') Клієнти
			li(class='pure-menu-item')
				a(class='dashboard-menu_link block-underline') Клієнти

			li(class='pure-menu-item')
				a(class='dashboard-menu_section-heading') Супермаркети
			li(class='pure-menu-item')
				a(class='dashboard-menu_link') Мережі
			li(class='pure-menu-item')
				a(class='dashboard-menu_link block-underline') Магазини

	div(class='pure-g layout')
		header(class='dashboard--header pure-u-1')
			div(class='header--logo')
				i(class='fa fa-trophy')
				|LeaderTeam
			ul(class='header__list')
				li(class='header__item')
					a
						i(class='fa fa-user-alt')
						|  Мій профіль
				li(class='header__item')
					a
						i(class='fa fa-sign-out-alt')
						|  Вийти

		div(class='content pure-u-1')
			div(class='content__container')
				header(class='content__header') Менеджери
					button(class='pure-button pure-button-primary header__new-role') Додати Менеджера
				main(class='content__main')
					if (username === 'larkvincer')
						|#{username}
					else
						|#{username} - pidr
				footer(class='content__footer')
					ul(class='paginator')
						li(class='paginator__item paginator__previous')
							a
								i(class='fa fa-chevron-left')
						li(class='paginator__item')
							a 1
						li(class='paginator__item')
							a ...
						li(class='paginator__item')
							a 100
						li(class='paginator__item paginator__next')
							a
								i(class='fa fa-chevron-right')

		footer(class='dashboard--footer pure-u-1') LeaderTeam Copyright 2018

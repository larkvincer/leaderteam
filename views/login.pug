extends layout

block content
	header
		h2(class='text--align-center title--width-half') LeaderTeam
	div(class='pure-g')
		div(class='pure-u-1-3 block--align-center')
			form(class='form form--type-login pure-form pure-form-aligned')
				fieldset
					div(class='pure-control-group')
						input(class='pure-input-1' type='text' name='login' placeholder='Логін')
					div(class='pure-control-group')
						input(class='pure-input-1' type='password' name='password' placeholder='Пароль')
					button(
						class='pure-button pure-button-primary pure-u-1-3 form-submit'
						type='submit' value='log in') Вхід
